<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.shyohan.aac.activity.DeliveryActivity">
    <include layout="@layout/layout_title"/>
    <com.zhy.autolayout.AutoLinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <ImageView
            android:layout_marginTop="146px"

            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/tv_select"
            android:src="@mipmap/ic_login_head"
            android:layout_width="247px"
            android:layout_height="247px"
            />
<com.zhy.autolayout.AutoLinearLayout
    android:layout_width="match_parent"
    android:layout_height="130px"
    android:layout_marginLeft="132px"
    android:layout_marginTop="141px"
    android:layout_marginRight="132px"
    android:background="@mipmap/ic_bg_search">
    <EditText
        android:background="@null"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="59px"
        android:hint="@string/please_input_name_or_phoneNo"
        android:id="@+id/et_username"
        android:gravity="center_vertical"
        android:textColor="@color/textcolor_b5b5b6"
        android:textSize="@dimen/home_left_text_size_45_px"
        />
    <ImageView
        android:layout_alignBottom="@+id/tv_select"
        android:src="@mipmap/ic_clear"
        android:layout_width="52px"
        android:layout_marginRight="33px"
        android:layout_height="52px"
        android:layout_gravity="center_vertical"
        android:id="@+id/iv_clear"
        />
</com.zhy.autolayout.AutoLinearLayout>
        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="130px"
            android:layout_marginLeft="132px"
            android:layout_marginTop="57px"
            android:layout_marginRight="132px"
            android:background="@mipmap/ic_bg_search">
            <EditText
                android:background="@null"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:paddingLeft="59px"
                android:hint="@string/please_input_pwd"
                android:id="@+id/et_pwd"
                android:gravity="center_vertical"
                android:textColor="@color/textcolor_b5b5b6"
                android:inputType="textPassword"
                android:textSize="@dimen/home_left_text_size_45_px"
                />
            <ImageView
                android:layout_alignBottom="@+id/tv_select"
                android:src="@mipmap/ic_unsee"
                android:layout_width="52px"
                android:layout_marginRight="33px"
                android:layout_height="52px"
                android:layout_gravity="center_vertical"
                android:id="@+id/iv_is_see"
                />
        </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="127px"
        android:text="@string/login"
        android:textSize="40px"
        android:id="@+id/btn_confirm"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="148px"
        android:layout_marginLeft="151px"
        android:layout_marginRight="151px"
        android:textColor="@color/white"
        android:background="@color/colorPrimary"/>

</com.zhy.autolayout.AutoLinearLayout>
